{
  "name": "secondhandcell",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=18.18.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "pnpm run test:unit && pnpm run test:integration",
    "test:unit": "vitest run",
    "test:integration": "firebase emulators:exec --only firestore 'vitest run --config vitest.integration.config.ts'",
    "test:e2e": "firebase emulators:exec --only firestore 'vitest run --config vitest.e2e.config.ts'",
    "dev:seed": "tsx scripts/dev-seed.ts",
    "check:env": "tsx scripts/check-env.ts",
    "security:audit": "tsx scripts/security-audit.ts",
    "emulators": "firebase emulators:start --import .firebase-seed --export-on-exit"
  },
  "dependencies": {
    "@firebase/app": "^0.10.12",
    "@firebase/auth": "^1.7.7",
    "@firebase/firestore": "^4.6.4",
    "@heroicons/react": "^2.1.5",
    "@radix-ui/react-dialog": "^1.1.7",
    "@radix-ui/react-dropdown-menu": "^2.1.7",
    "@radix-ui/react-toast": "^1.2.7",
    "@tanstack/react-query": "^5.60.5",
    "firebase-admin": "^12.5.0",
    "firebase-functions": "^5.1.0",
    "jsdom": "^24.0.0",
    "next": "^14.2.15",
    "next-auth": "^4.24.7",
    "nodemailer": "^6.9.13",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "stripe": "^14.25.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@firebase/rules-unit-testing": "^3.0.2",
    "@types/node": "^20.16.11",
    "@types/nodemailer": "^6.4.15",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "autoprefixer": "^10.4.20",
    "eslint": "^8.57.1",
    "eslint-config-next": "^14.2.15",
    "firebase-tools": "^13.29.0",
    "postcss": "^8.4.47",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.20.5",
    "typescript": "^5.6.3",
    "vitest": "^1.6.0"
  }
}
