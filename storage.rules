rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /images/{allPaths=**} {
      // Optionally restrict by auth; keep read-only for marketing assets.
      allow read: if true;
      allow write: if false;
    }

    match /labels/{orderId}/{fileName} {
      // Labels are generated server-side. Only allow access via signed URLs or admin SDK.
      allow read, write: if false;
    }

    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
